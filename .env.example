# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=voidlord
DB_SYNCHRONIZE=true
DB_LOGGING=false
DB_RESET_STRATEGY=truncate # reset:db 脚本策略: truncate / drop

# 运行环境
NODE_ENV=production

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d

# 应用配置
PORT=                 # 留空: 由 GitHub Actions Secrets PORT 注入
PUBLIC_HOST_IP=       # 留空: 由 GitHub Actions Secrets PUBLIC_HOST_IP 注入

ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=       # 留空: 由 GitHub Actions Secrets ADMIN_PASSWORD 注入


# MinIO / S3 对象存储（如未显式设置，将基于 PUBLIC_HOST_IP 推导默认值）
MINIO_PORT=
MINIO_ENDPOINT=
MINIO_PUBLIC_ENDPOINT=
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_REGION=us-east-1
MINIO_FORCE_PATH_STYLE=true
MINIO_BUCKET=voidlord


